<QuestionScreen>:

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size

        FloatLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: (800,7)
                    pos: (0,420)
                Rectangle:
                    size: (800,7)
                    pos: (0,45)

        FloatLayout:
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Patient id:[/color][/font]"
                size_hint: (None,None)
                pos: (55,415)
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Name:[/color][/font]"
                size_hint: (None,None)
                pos: (43,395)
            Label:
                id: p_id
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (120,415)
            Label:
                id: p_name
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (95,395)

            Button:
                size_hint: (None,None)
                size: (50,50)
                background_color: [255,255,255,0]
                pos: (7,430)
                on_press: root.manager.current = 'Home_Screen'
                canvas:
                    Rectangle:
                        source: 'Resources/home_btn.png'
                        size: (50,50)
                        pos: self.pos


    FloatLayout:

        Label:
            text: '[color=#0000ff][b]MEDICAL QUESTIONNAIRE[/b][/color]'
            font_size: 20
            pos: (380,400)
            markup: True
            size_hint: (None,None)

        Label:
            text: "[color=#0000ff][b]Symptoms:\nKindly select all the symptoms patient has.[/b][/color]"
            size_hint: (None, None)
            pos: (150,330)
            font_size: 16
            markup: True

        CheckBox:
            id: cb_dyspnea
            size_hint: (None,None)
            pos: (10,290)
            color: [0,0,0,1]

        Label:
            size_hint: (None, None)
            text: "[color=#000000]Progressive Dyspnea (worsens over time and exercise)[/color]"
            font_size: 15
            markup: True
            pos: (220,290)


        CheckBox:
            id: cb_cough
            pos: (10,250)
            color: [0,0,0,1]
            size_hint: (None,None)
        Label:
            size_hint: (None, None)
            text: "[color=#000000]Chronic Cough[/color]"
            font_size: 15
            markup: True
            pos: (85,250)

        CheckBox:
            id: cb_sputum
            pos: (10,210)
            color: [0,0,0,1]
            size_hint: (None,None)
        Label:
            size_hint: (None, None)
            text: "[color=#000000]Sputum Production[/color]"
            font_size: 15
            markup: True
            pos: (100,210)

        CheckBox:
            id: cb_wheezing
            pos: (10,170)
            color: [0,0,0,1]
            size_hint: (None,None)
        Label:
            size_hint: (None, None)
            text: "[color=#000000]Wheezing [/color]"
            font_size: 15
            markup: True
            pos: (70,170)

        Label:
            text: "[color=#0000ff][b]All the symptoms mentioned above are slowly progressive. Please answer in yes/no.[/b][/color]"
            size_hint: (None, None)
            pos: (300,120)
            font_size: 16
            markup: True

        CheckBox:
            id: cb_yes
            group: 'A'
            pos: (10,90)
            color: [0,0,0,1]
            size_hint: (None,None)

        CheckBox:
            id: cb_no
            disabled: False
            group: 'A'
            pos: (10,55)
            color: [0,0,0,1]
            size_hint: (None,None)

        Label:
            text: "[color=#000000]Yes[/color]"
            markup: True
            size_hint: (None,None)
            pos: (49,90)
            font_size: 15

        Label:
            text: "[color=#000000]No[/color]"
            markup: True
            size_hint: (None,None)
            pos: (49,55)
            font_size: 15

        Button:
            text: "[color=#ffffff][b]NEXT[/b][/color]"
            pos: (580,60)
            background_color: [0,0,200,0.8]
		    markup: True
		    size_hint: (None,None)
		    height: 38
            width: self.width
            on_press:
                root.manager.current = "YesNoQuestion_Screen"
                root.submit()


        Label:
            text: "[color=#0000ff][u][ref=some]Edit[/ref][/u][/color]"
            markup: True
            size_hint: (None, None)
            font_size: 16
            on_ref_press: root.edit()
            pos: (700,350)


    FloatLayout:
        Button:
            id: exit_btn
            size_hint: (None,None)
            height: 20
            width: 20
            background_color: [1,1,1,0]
            on_press : root.exit_prog()
            pos: (763,450)
            canvas:
                Rectangle:
                    source:"Resources/exit_btn.png"
                    pos: self.pos
                    size: self.size
        Button:
            id: back_btn
            size_hint: (None,None)
            height: 40
            width: 40
            background_color: [255,255,255,0]
            pos: (10,4)
            on_press: root.manager.current = 'Home_Screen'
            canvas:
                Rectangle:
                    source:"Resources/back_btn.png"
                    pos: self.pos
                    size: self.size
        Label:
            markup: True
            id: contact_us
            text: "[font=OpenSans][color=#000000][u]Contact Us[/u][/color][/font]"
            underlined : True
            size_hint: (None,None)
            size: (50,50)
            pos: (365,-5)