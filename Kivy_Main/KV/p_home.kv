<HomeScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size

        FloatLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: (800,7)
                    pos: (0,420)
                Rectangle:
                    size: (800,7)
                    pos: (0,45)

        FloatLayout:
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Patient id:[/color][/font]"
                size_hint: (None,None)
                pos: (55,415)
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Name:[/color][/font]"
                size_hint: (None,None)
                pos: (43,395)
            Label:
                id: p_id
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (120,415)
            Label:
                id: p_name
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (95,395)

            Button:
                size_hint: (None,None)
                size: (50,50)
                background_color: [255,255,255,0]
                pos: (7,430)
                canvas:
                    Rectangle:
                        source: 'Resources/home_btn.png'
                        size: (50,50)
                        pos: self.pos

    FloatLayout:
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]MEDICAL QUESTIONNARIE[/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 200
            pos: (290,310)
            on_press: root.manager.current = "Question_Screen"
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]HISTORY[/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 100
            pos: (180,260)
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]TEST[/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 100
            pos: (285,260)
            on_press: root.manager.current = "Test_Screen"
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]DIAGNOSIS[/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 100
            pos: (390,260)
            on_press: root.manager.current = 'Diagnosis_Screen'
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]TREATMENT[/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 100
            pos: (495,260)
            on_press: root.manager.current = 'Treatment_Screen'
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]TUTORIAL[/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 100
            pos: (285,200)
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]MANUAL[/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 100
            pos: (390,200)
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b] LIFE WITH COPD [/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 195
            pos: (295,140)
            on_press: root.manager.current = "COPD_Screen"

    FloatLayout:
        Button:
            id: exit_btn
            size_hint: (None,None)
            height: 20
            width: 20
            background_color: [1,1,1,0]
            on_press : root.exit_prog()
            pos: (763,450)
            canvas:
                Rectangle:
                    source:"Resources/exit_btn.png"
                    pos: self.pos
                    size: self.size
        Button:
            id: back_btn
            size_hint: (None,None)
            height: 40
            width: 40
            background_color: [255,255,255,0]
            pos: (10,4)
            on_press: root.manager.current = 'Registration_Screen'
            canvas:
                Rectangle:
                    source:"Resources/back_btn.png"
                    pos: self.pos
                    size: self.size
        Label:
            markup: True
            id: contact_us
            text: "[font=OpenSans][color=#000000][u][ref=contact]Contact Us[/ref][/u][/color][/font]"
            underlined : True
            on_ref_press : root.manager.current = 'AdminLogin_Screen'
            size_hint: (None,None)
            size: (50,50)
            pos: (365,-5)