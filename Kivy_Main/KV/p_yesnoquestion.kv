<YesNoQuestionScreen>:

    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size

        FloatLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: (800,7)
                    pos: (0,420)
                Rectangle:
                    size: (800,7)
                    pos: (0,45)

        FloatLayout:
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Patient id:[/color][/font]"
                size_hint: (None,None)
                pos: (55,415)
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Name:[/color][/font]"
                size_hint: (None,None)
                pos: (43,395)
            Label:
                id: p_id
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (120,415)
            Label:
                id: p_name
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (95,395)

            Button:
                size_hint: (None,None)
                size: (50,50)
                background_color: [255,255,255,0]
                pos: (7,430)
                on_press: root.manager.current = 'Home_Screen'
                canvas:
                    Rectangle:
                        source: 'Resources/home_btn.png'
                        size: (50,50)
                        pos: self.pos

            Button:
                id: back_btn
                size_hint: (None,None)
                height: 40
                width: 40
                background_color: [255,255,255,0]
                pos: (10,4)
                on_press: root.manager.current = 'Question_Screen'
                canvas:
                    Rectangle:
                        source:"Resources/back_btn.png"
                        pos: self.pos
                        size: self.size

            Button:
                id: next_btn
                size_hint: (None,None)
                height: 40
                width: 40
                background_color: [255,255,255,0]
                pos: (750,4)
                on_press: root.manager.current = 'Test_Screen'
                canvas:
                    Rectangle:
                        source:"Resources/next_btn.png"
                        pos: self.pos
                        size: self.size

            Button:
                id: exit_btn
                size_hint: (None,None)
                height: 20
                width: 20
                background_color: [1,1,1,0]
                on_press : root.exit_prog()
                pos: (763,450)
                canvas:
                    Rectangle:
                        source:"Resources/exit_btn.png"
                        pos: self.pos
                        size: self.size


        FloatLayout:
            Label:
                text: '[color=#0000ff][b]MEDICAL QUESTIONNAIRE[/b][/color]'
                font_size: 20
                pos: (380,400)
                markup: True
                size_hint: (None,None)

            Label:
                text: '[color=#0000ff][b]Please answer each question in Yes or No[/b][/color]'
                font_size: 18
                size_hint: (None,None)
                markup: True
                pos: (150,335)

            Label:
                text: '[color=#000000]1  "Do you usually cough or have to clear your throat in the morning \n or when getting up?"[/color]'
                font_size: 16
                size_hint: (None,None)
                markup: True
                pos: (225,290)

            CheckBox:
                id: cb1_yes
                group: '1'
                pos: (570,295)
                color: [0,0,0,1]
                size_hint: (None,None)
            Label:
                text: "[color=#000000]Yes[/color]"
                markup: True
                size_hint: (None, None)
                pos: (600,295)
            CheckBox:
                id: cb1_no
                group: '1'
                pos: (640,295)
                color: [0,0,0,1]
                size_hint: (None,None)
            Label:
                text: "[color=#000000]No[/color]"
                markup: True
                size_hint: (None, None)
                pos: (670,295)


