<COPDScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size

        FloatLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: (800,7)
                    pos: (0,420)
                Rectangle:
                    size: (800,7)
                    pos: (0,45)

        FloatLayout:
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Patient id:[/color][/font]"
                size_hint: (None,None)
                pos: (55,415)
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Name:[/color][/font]"
                size_hint: (None,None)
                pos: (43,395)
            Label:
                id: p_id
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (120,415)
            Label:
                id: p_name
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (95,395)
            Button:
                size_hint: (None,None)
                size: (50,50)
                background_color: [255,255,255,0]
                pos: (7,430)
                on_press: root.manager.current = "Home_Screen"
                canvas:
                    Rectangle:
                        source: 'Resources/home_btn.png'
                        size: (50,50)
                        pos: self.pos

    FloatLayout:
        Label:
            markup: True
            text: "[color=#000000][font=OpenSans]Stage-1 COPD[/color][/font]"
            size_hint: (None,None)
            size: (50,50)
            pos: (385,325)
            font_size: '23px'
        Label:
            markup: True
            text: "[color=#000000][font=OpenSans]% Improvement[/color][/font]"
            size_hint: (None,None)
            size: (50,50)
            pos: (200,225)
            font_size: '18px'
        Label:
            id: p_improvement
            markup: True
            text: "[color=#000000][font=OpenSans]0000[/color][/font]"
            size_hint: (None,None)
            size: (50,50)
            pos: (350,225)
            font_size: '18px'
        Label:
            markup: True
            text: "[color=#000000][font=OpenSans]Date Of Next Test[/color][/font]"
            size_hint: (None,None)
            size: (50,50)
            pos: (200,190)
            font_size: '18px'
        Label:
            id: p_date_of_next_test
            markup: True
            text: "[color=#000000][font=OpenSans]0000[/color][/font]"
            size_hint: (None,None)
            size: (50,50)
            pos: (350,190)
            font_size: '18px'
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]Treatment \n   Options[/b][/color]"
		    size_hint: (None,None)
		    height: 50
            width: 120
            pos: (220,130)
            on_press: root.show_options()
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]   Generate \n Prescription[/b][/color]"
		    size_hint: (None,None)
		    height: 50
            width: 120
            pos: (370,130)
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]Generate \n  Report[/b][/color]"
		    size_hint: (None,None)
		    height: 50
            width: 120
            pos: (520,130)
        Button:
            background_color: [0,0,200,0.8]
		    markup: True
		    text: "[color=#ffffff][b]     Contact\nPulmonologist[/b][/color]"
		    size_hint: (None,None)
		    height: 50
            width: 120
            pos: (370,70)

    FloatLayout:
        Button:
            id: exit_btn
            size_hint: (None,None)
            height: 20
            width: 20
            background_color: [1,1,1,0]
            on_press : root.exit_prog()
            pos: (763,450)
            canvas:
                Rectangle:
                    source:"Resources/exit_btn.png"
                    pos: self.pos
                    size: self.size
        Button:
            id: back_btn
            size_hint: (None,None)
            height: 40
            width: 40
            background_color: [255,255,255,0]
            pos: (10,4)
            on_press: root.manager.current = 'Registration_Screen'
            canvas:
                Rectangle:
                    source:"Resources/back_btn.png"
                    pos: self.pos
                    size: self.size
        Label:
            markup: True
            id: contact_us
            text: "[font=OpenSans][color=#000000][u][ref=contact]Contact Us[/ref][/u][/color][/font]"
            underlined : True
            on_ref_press : root.manager.current = 'Contact_Screen'
            size_hint: (None,None)
            size: (50,50)
            pos: (365,-5)
