<AlreadyRegisteredScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size

        FloatLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: (800,7)
                    pos: (0,420)
                Rectangle:
                    size: (800,7)
                    pos: (0,45)

        FloatLayout:
	        Label:
	            text: "Patient ID"
                pos : (-307,320)
                bold: True
                color: [0,0,0,1]
	        Label:
                text: "First Name"
                pos : (-30,320)
                bold: True
                color: [0,0,0,1]
	        Label:
                text: "Last Name"
                pos : (236,320)
                bold: True
                color: [0,0,0,1]

        FloatLayout:
	        TextInput:
	            id: pa_id
		        hint_text: "Enter Patient ID"
		        multiline: False
		        size_hint: (None,None)
		        height: 30
		        width: 170
		        pos : (60,325)
		        use_bubble: True
	        TextInput:
		        id: pa_fname
		        hint_text: "Enter First Name"
		        multiline: False
		        size_hint: (None,None)
		        height: 30
		        width: 170
		        pos : (333,325)
		        use_bubble: True
	        TextInput:
		        id: pa_lname
		        hint_text: "Enter Last Name"
		        multiline: False
		        size_hint: (None,None)
		        height: 30
		        width: 170
		        pos : (600,325)
		        use_bubble: True
		    Button:
		        id: search_btn
		        background_color: [0,0,200,0.8]
		        markup: True
		        text: "[color=#ffffff][b]Search[/b][/color]"
		        size_hint: (None,None)
		        height: 38
                width: 100
                pos: (360,260)

            Label:
                text: "*Note: Click On Your Name To Select."
                pos : (266,195)
                bold: True
                color: [1,0,0,1]

        GridLayout:
            cols: 3
            rows:4
            row_force_default: True
            row_default_height: 30
            pos: (330,100)
            canvas.before:
                Color:
                    rgba: .5, 0.5,0.5 , .8
                Line:
                    width: 2
                    rectangle: self.x, self.y, self.width, self.height
            canvas:
                Color:
                    rgba: 0,0,0.5,.2
                Rectangle:
                    size: self.size
                    pos: self.pos
            Label:
                markup: True
                text: "[color=#000000]ID[/color]"
            Label:
                markup: True
                text: "[color=#000000]Name[/color]"
            Label:
                markup: True
                text: "[color=#000000]Gender[/color]"
            Label:
                id:p1_id
                markup:True
                text:"[color=#000000][/color]"
            Button:
                id:p1_name
                background_color: [0,0,0,0]
            Label:
                id:p1_gender
                markup:True
                text:"[color=#000000][/color]"
            Label:
                id:p2_id
                markup:True
                text:"[color=#000000][/color]"
            Button:
                id:p2_name
                background_color: [0,0,0,0]
            Label:
                id:p2_gender
                markup:True
                text:"[color=#000000][/color]"
            Label:
                id:p3_id
                markup:True
                text:"[color=#000000][/color]"
            Button:
                id:p3_name
                background_color: [0,0,0,0]
            Label:
                id:p3_gender
                markup:True
                text:"[color=#000000][/color]"
        FloatLayout:
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Patient id:[/color][/font]"
                size_hint: (None,None)
                pos: (55,415)
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Name:[/color][/font]"
                size_hint: (None,None)
                pos: (43,395)
            Label:
                id: p_id

                size_hint: (None,None)
                pos: (120,415)
            Label:
                id: p_name
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (95,395)

            Button:
                size_hint: (None,None)
                size: (50,50)
                background_color: [255,255,255,0]
                pos: (7,430)
                on_press: root.manager.current = "Home_Screen"
                canvas:
                    Rectangle:
                        source: 'Resources/home_btn.png'
                        size: (50,50)
                        pos: self.pos

    FloatLayout:
        Button:
            id: exit_btn
            size_hint: (None,None)
            height: 20
            width: 20
            background_color: [1,1,1,0]
            on_press : root.exit_prog()
            pos: (763,450)
            canvas:
                Rectangle:
                    source:"Resources/exit_btn.png"
                    pos: self.pos
                    size: self.size
        Button:
            id: back_btn
            size_hint: (None,None)
            height: 40
            width: 40
            background_color: [255,255,255,0]
            pos: (10,4)
            on_press: root.manager.current = 'Registration_Screen'
            canvas:
                Rectangle:
                    source:"Resources/back_btn.png"
                    pos: self.pos
                    size: self.size
        Label:
            markup: True
            id: contact_us
            text: "[font=OpenSans][color=#000000][u][ref=contact]Contact Us[/ref][/u][/color][/font]"
            underlined : True
            on_ref_press : root.manager.current = 'Contact_Screen'
            size_hint: (None,None)
            size: (50,50)
            pos: (365,-5)
