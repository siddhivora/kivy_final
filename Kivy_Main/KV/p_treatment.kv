<TreatmentScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size
        FloatLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: (800,7)
                    pos: (0,420)
                Rectangle:
                    size: (800,7)
                    pos: (0,45)
        FloatLayout:
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Patient id:[/color][/font]"
                size_hint: (None,None)
                pos: (55,415)
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Name:[/color][/font]"
                size_hint: (None,None)
                pos: (43,395)
            Label:
                id: p_id
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (120,415)
            Label:
                id: p_name
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (95,395)
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Treatment[/color][/font]"
                size_hint: (None,None)
                size: (50,50)
                pos: (385,425)
                font_size: '23px'
    FloatLayout:
        Label:
            text: "[color=#0000ff][b]Lifestyle Changes[/b][/color]"
            size_hint: (None, None)
            pos: (110,345)
            font_size: 20
            markup: True
        Button:
            id: smoking_cessation
            color: [0,0,0,1]
            size_hint: (None,None)
            background_color: [1,1,1,0]
            size: (150,130)
            pos: (75,245)
            canvas:
                Rectangle:
                    source: "Resources/avoid_smoking.png"
                    size: self.size
                    pos: self.pos
        Label:
            text: "[color=#0000ff][b]Medications and\n                Inhalers[/b][/color]"
            size_hint: (None, None)
            pos: (385,335)
            font_size: 20
            markup: True
        Button:
            id: bronchodilator
            text: "bronchodilator"
            color: [0,0,0,1]
            size_hint: (None,None)
            background_color: [1,1,1,0]
            size: (120,120)
            pos: (325,250)
            on_press: root.manager.current = 'DrugsName_Screen' if self.text in root.trt_list else end
            canvas:
                Rectangle:
                    source: "Resources/medications.png"
                    size: self.size
                    pos: self.pos
                Rectangle:
                    source: "Resources/inhaler.png"
                    size: (130,100)
                    pos: (410,230)
        Label:
            text: "[color=#0000ff][b]Vaccination[/b][/color]"
            size_hint: (None, None)
            pos: (600,345)
            font_size: 20
            markup: True
        Button:
            id: vaccination
            color: [0,0,0,1]
            size_hint: (None,None)
            background_color: [1,1,1,0]
            size: (150,130)
            pos: (585,245)
            canvas:
                Rectangle:
                    source: "Resources/vaccine.png"
                    size: self.size
                    pos: self.pos
        Label:
            text: "[color=#0000ff][b]Pulmonary Rehabilitation[/b][/color]"
            size_hint: (None, None)
            pos: (175,155)
            font_size: 20
            markup: True
        Button:
            id: pulmonary_rehabilitation
            color: [0,0,0,1]
            size_hint: (None,None)
            background_color: [1,1,1,0]
            size: (190,175)
            pos: (250,55)
            canvas:
                Rectangle:
                    source: "Resources/breathing.png"
                    size: self.size
                    pos: self.pos
                Rectangle:
                    source: "Resources/fruits1.png"
                    size: (200,150)
                    pos: (130,55)
        Label:
            text: "[color=#0000ff][b]Oxygen Therapy[/b][/color]"
            size_hint: (None, None)
            pos: (540,155)
            font_size: 20
            markup: True
        Button:
            id: oxygen_therapy
            color: [0,0,0,1]
            size_hint: (None,None)
            background_color: [1,1,1,0]
            size: (150,130)
            pos: (520,65)
            canvas:
                Rectangle:
                    source: "Resources/oxygen_therapy.png"
                    size: self.size
                    pos: self.pos
    FloatLayout:
        Button:
            id: exit_btn
            size_hint: (None,None)
            height: 20
            width: 20
            background_color: [1,1,1,0]
            on_press : root.exit_prog()
            pos: (763,450)
            canvas:
                Rectangle:
                    source:"Resources/exit_btn.png"
                    pos: self.pos
                    size: self.size
        Button:
            id: back_btn
            size_hint: (None,None)
            height: 40
            width: 40
            background_color: [255,255,255,0]
            pos: (10,4)
            on_press: root.manager.current = 'Registration_Screen'
            canvas:
                Rectangle:
                    source:"Resources/back_btn.png"
                    pos: self.pos
                    size: self.size
        Label:
            markup: True
            id: contact_us
            text: "[font=OpenSans][color=#000000][u][ref=contact]Contact Us[/ref][/u][/color][/font]"
            underlined : True
            on_ref_press : root.manager.current = 'Contact_Screen'
            size_hint: (None,None)
            size: (50,50)
            pos: (365,-5)
        Button:
            size_hint: (None,None)
            size: (50,50)
            background_color: [255,255,255,0]
            pos: (7,430)
            on_press: root.manager.current = "Home_Screen"
            canvas:
                Rectangle:
                    source: 'Resources/home_btn.png'
                    size: (50,50)
                    pos: self.pos
