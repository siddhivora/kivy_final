<AdminLogin>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size

        FloatLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: (800,7)
                    pos: (0,420)
                Rectangle:
                    size: (800,7)
                    pos: (0,45)

            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Admin[/color][/font]"
                size_hint: (None,None)
                size: (50,50)
                pos: (385,425)
                font_size: '23px'
            Button:
                size_hint: (None,None)
                size: (50,50)
                background_color: [255,255,255,0]
                pos: (7,430)
                on_press: root.manager.current = "Home_Screen"
                canvas:
                    Rectangle:
                        source: 'Resources/home_btn.png'
                        size: (50,50)
                        pos: self.pos
    FloatLayout:
        Button:
            id: exit_btn
            size_hint: (None,None)
            height: 20
            width: 20
            background_color: [1,1,1,0]
            on_press : root.exit_prog()
            pos: (763,450)
            canvas:
                Rectangle:
                    source:"Resources/exit_btn.png"
                    pos: self.pos
                    size: self.size
        Button:
            id: back_btn
            size_hint: (None,None)
            height: 40
            width: 40
            background_color: [255,255,255,0]
            pos: (10,4)
            on_press: root.manager.current = 'Registration_Screen'
            canvas:
                Rectangle:
                    source:"Resources/back_btn.png"
                    pos: self.pos
                    size: self.size

    FloatLayout:
        Label:
            markup: True
            text: "[color=#0000c8]Username[/color]"
            size_hint: (None,None)
            pos: (150,300)
            bold:True
            font_size: '18px'
        TextInput:
            id: admin_un
            hint_text: "Username"
            multiline: False
            size_hint: (None,None)
            height: 30
            width: 170
            pos : (250,333)
            use_bubble: True
        Label:
            markup: True
            text: "[color=#0000c8]Password[/color]"
            pos: (150,240)
            size_hint: (None,None)
            bold:True
            font_size: '18px'
        TextInput:
            id: admin_pw
            hint_text: "Password"
            multiline: False
            size_hint: (None,None)
            height: 30
            width: 170
            pos : (250,275)
            use_bubble: True
            password: True
        Button:
            id: admin_login
            text: "Login"
            size_hint: (None,None)
            height: 40
            width: 90
            pos: (240,200)
            on_press: root.admin_login()