<ContactScreen>:
    BoxLayout:
        orientation: 'vertical'
        canvas:
            Color:
                rgba: 1,1,1,1
            Rectangle:
                size: self.size

        FloatLayout:
            canvas:
                Color:
                    rgba: 0,0,0,0.3
                Rectangle:
                    size: (800,7)
                    pos: (0,420)
                Rectangle:
                    size: (800,7)
                    pos: (0,45)

        FloatLayout:
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Patient id:[/color][/font]"
                size_hint: (None,None)
                pos: (55,415)
            Label:
                markup: True
                text: "[color=#000000][font=OpenSans]Name:[/color][/font]"
                size_hint: (None,None)
                pos: (43,395)
            Label:
                id: p_id
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (120,415)
            Label:
                id: p_name
                markup: True
                text: "[color=#000000][font=OpenSans][/color][/font]"
                size_hint: (None,None)
                pos: (95,395)

            Button:
                size_hint: (None,None)
                size: (50,50)
                background_color: [255,255,255,0]
                pos: (7,430)
                on_press: root.manager.current = 'Home_Screen'
                canvas:
                    Rectangle:
                        source: 'Resources/home_btn.png'
                        size: (50,50)
                        pos: self.pos

            Button:
                id: back_btn
                size_hint: (None,None)
                height: 40
                width: 40
                background_color: [255,255,255,0]
                pos: (10,4)
                on_press: root.manager.current = 'Question_Screen'
                canvas:
                    Rectangle:
                        source:"Resources/back_btn.png"
                        pos: self.pos
                        size: self.size

            Button:
                id: exit_btn
                size_hint: (None,None)
                height: 20
                width: 20
                background_color: [1,1,1,0]
                on_press : root.exit_prog()
                pos: (763,450)
                canvas:
                    Rectangle:
                        source:"Resources/exit_btn.png"
                        pos: self.pos
                        size: self.size

    FloatLayout:
        Label:
            text: "[color=#000000][b]Contact Us[/b][/color]"
            font_size: 30
            size_hint: (None, None)
            markup: True
            pos: (340,300)
        Label:
            text: "[color=#000000]Address:[/color]"
            font_size: 25
            size_hint: (None, None)
            markup: True
            pos: (174,220)
        Label:
            id: address_lbl
            text: "[color=#000000][/color]"
            font_size: 25
            size_hint: (None, None)
            markup: True
            pos: (250,220)

        Label:
            text: "[color=#000000]Email Id:[/color]"
            font_size: 25
            size_hint: (None, None)
            markup: True
            pos: (170,170)
        Label:
            id: email_lbl
            text: "[color=#000000][/color]"
            font_size: 25
            size_hint: (None, None)
            markup: True
            pos: (250,170)

        Label:
            text: "[color=#000000]Phone No:[/color]"
            font_size: 25
            size_hint: (None, None)
            markup: True
            pos: (180,120)

        Label:
            id: phone_lbl
            text: "[color=#000000][/color]"
            font_size: 25
            size_hint: (None, None)
            markup: True
            pos: (250,120)

        Button:

            on_press: root.manager.current = "Home_Screen"
            background_color: [0,0,200,.8]
		    markup: True
		    text: "[color=#ffffff][b] HOME [/b][/color]"
		    size_hint: (None,None)
		    height: 38
            width: 150
            pos: (300,90)

